extends layout

block content
  //- h1= title
  //- p Welcome to #{title}

  //- https://pugjs.org/language/includes.html
  include includes/var.pug
  //- p.testInclude Hey voici du texte qui  d'ailleurs : #{tayste}
  //- nav#navbar-default  
  //- div.container-fluid
  //-   h1.navbar-header Watch movie !

  mixin monFilm(film)
    .article  
      .header
        .nav
          ul 
            each val in [{texte: "🎞 Super film", link:"#"}, {texte: "🏠 Acceuil", link:"#"}, {texte: "À propos", link: "/aPropos"}, {texte: "📔 Contact", link:"/aContact"}]
              a(href=val.link) #{val.texte}
    
      .header
        div.entete
          h1= film.title.text
          h2= film.category
      .main
          img(src="images/ca.jpg")
          .description
            h2= film.description
          .footer
      .footer
        .Realisator Stephen King
        ul.actors 
          each val in film.actors
            li=val
              
        .date Sortie le : 30-03-2021
  each val in mesFilms 
    +monFilm(val)
   
        
